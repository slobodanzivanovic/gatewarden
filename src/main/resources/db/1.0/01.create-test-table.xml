<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-test-seq" author="delveye">
        <createSequence sequenceName="test_seq" startValue="1" incrementBy="50"/>
    </changeSet>

    <changeSet id="create-test-table" author="delveye">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="test"/>
            </not>
        </preConditions>
        <createTable tableName="test">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="api_key" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="add-api-keys-on-local" author="delveye" context="local">
        <insert tableName="test">
            <column name="id" value="1"/>
            <column name="name" value="test-client"/>
            <column name="api_key" value="test-key"/>
        </insert>
    </changeSet>
</databaseChangeLog>
